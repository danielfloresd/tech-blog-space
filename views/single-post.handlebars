<div class="card">
    <h3 class="card-header bg-primary text-center text-white border-bottom-0">
        Post with Comments
    </h3>
</div>

{{> post-view post }}
<br></br> 
{{#if logged_in}}
<div class="card">
    <div class="card-header bg-primary mb-0 text-white">
        Comment
    </div>
    <form class="new-comment-form card-body" id="new-comment-form">
        <div class="form-group">
            <textarea rows="2" class="form-control" id="comment-text" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-info btn-block mt-2">Submit</button>
    </form>
</div>
{{/if}}
<br></br>

{{!-- show all the existing comments for this post --}}
{{!-- <div class="container"> --}}
    <div class="card">
        <h3 class="card-header bg-secondary text-center border-bottom-0">Comments</h3>
        <ul class="list-group list-unstyled">
            {{#each post.comments as |comment|}}
            <li class="">
                {{>comment-view}}
            </li>
            {{/each}}
        </ul>
        {{!-- </div> --}}
</div>

{{#if logged_in}}
<script src="/js/create-comment.js"></script>
{{/if}}`